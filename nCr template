#include <bits/stdc++.h>
using namespace std;

vector<long long> fact(1000004);
long long mod = 1e9+7;
void precomp(){
    fact[0]=1;
    for(long long i = 1; i <= 1000000; i++){
      fact[i] = (fact[i-1]*i)%mod;
    }
}
long long power(long long a, long long b){
  long long ans = 1;
  while(b>0){
    if(b&1){
      ans = (ans*a)%mod;
    }
    a = (a*a)%mod;  
    b>>=1;
  }
  return ans;
}
long long ncr(long long n, long long r){
  if(r>n)return 0;
  long long num = fact[n];
  long long deno = (fact[r] * fact[n-r])%mod;
  deno = power(deno,mod-2);
  return (num*deno)%mod;
}
int main() 
{
    int n,r;cin>>n>>r;
    precomp();
    cout << ncr(n,r) << endl;
}
